colorscheme molokai

set number
set relativenumber

set expandtab
set shiftwidth=2
set tabstop=2
set smarttab

set ai
set si
set wrap

filetype on
syntax enable
set hlsearch
set showmatch

set cursorline
set backspace=eol,start,indent
set whichwrap+=<,>,h,l

set noerrorbells
set novisualbell
set t_vb=
set tm=500
