{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "todiagram": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@todiagram/todiagram-mcp@latest"
      ],
      "enabled": true
    }
  }
}